<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="@dimen/margin_20dp"/>
            <stroke android:width="1px" android:color="@color/text_selected"/>
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="@dimen/margin_20dp"/>
            <stroke android:width="1px" android:color="@color/text_normal"/>
        </shape>
    </item>
</selector>